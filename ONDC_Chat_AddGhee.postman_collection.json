{
  "info": {
    "name": "ONDC Chat API - Initialize and Add Ghee to Cart",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "2b6f1b6e-6c09-4b66-9d7b-ondc-add-ghee"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8001" },
    { "key": "userId", "value": "EUSJ0ypAJJVdo3gXrUJe4uIBwDB2" },
    { "key": "deviceId", "value": "ed0bda0dd8c167a73721be5bb142dfc9" },
    { "key": "sessionId", "value": "" }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Initialize Session (set sessionId)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
              "const data = pm.response.json();",
              "pm.expect(data).to.have.property('session_id');",
              "pm.collectionVariables.set('sessionId', data.session_id);",
              "console.log('Initialized sessionId:', data.session_id);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"initialize_shopping(userId=\\\"{{userId}}\\\", deviceId=\\\"{{deviceId}}\\\")\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/chat",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "chat"]
        }
      }
    },
    {
      "name": "Search for ghee",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"search for ghee\",\n  \"session_id\": \"{{sessionId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/chat",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "chat"]
        }
      }
    },
    {
      "name": "Add first ghee item to cart",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"add the first ghee item to my cart\",\n  \"session_id\": \"{{sessionId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/chat",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "chat"]
        }
      }
    },
    {
      "name": "View cart",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"view cart\",\n  \"session_id\": \"{{sessionId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/chat",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "chat"]
        }
      }
    }
  ]
}


