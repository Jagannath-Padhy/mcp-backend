				{
					"name": "Create Session",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set('session_id', jsonData.session_id);",
									"pm.environment.set('device_id', jsonData.device_id);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"device_id\": \"postman-test-device\",\n  \"metadata\": {\n    \"source\": \"postman\",\n    \"test\": true\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/sessions",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "sessions"]
						}
